  <!--begin header provider-->
  <header class="w-full border-b border-dark-gray-100 fixed top-0 left-0 shadow-sm z-30">
    <nav class="bg-white border-gray-200 p-2.5 mx-auto" data-controller="navbar">
      <div class="flex flex-wrap justify-between items-center">
        <%= link_to root_path, class: "text-primary-600 flex items-center" do %>
          <%= image_tag(image_url("sprout.svg"), class: "h-12 w-12") %>
          SproutApp
        <% end %>
        <div class="flex items-center md:order-2">
          <% if current_user %>
              <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete },
                          class: "font-medium text-primary-600 hover:underline" %>
          <% else %>                  
            <%= link_to "Login", new_user_session_path, class: "font-medium text-primary-600 hover:underline" %>
          <% end %>
        </div>
      </div>
    </nav>
  </header>
  <!--end header provider-->