<div class="mt-[90px] lg:container mx-auto pb-8 px-4 min-h-[calc(100vh-90px)] relative" data-controller="mobile-blocks">
  <div class="w-full sm:max-w-md mx-auto p-4 bg-white rounded-md border border-dark-gray-100 shadow sm:w-8/12 sm:p-6 md:w-6/12 lg:w-4/12 lg:p-8">
   <h1 class="text-xl font-bold leading-tight md:text-2xl text-center mb-6">
      Forgot your password?
    </h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4 md:space-y-6 mb-4"}) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field mb-">
        <%= f.label :email, class: "block mb-2 sm:text-sm font-medium text-dark-gray-900" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-50 border border-dark-gray-100 text-dark-gray-900 sm:text-sm rounded-md focus:ring-dark-gray-200 focus:border-dark-gray-200 block w-full p-2.5 placeholder:text-dark-gray-400" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg sm:text-sm px-5 py-2.5 text-center" %>
      </div>
      <p class="text-sm font-light text-dark-gray-900">
          Donâ€™t have an account yet?
          <%= link_to new_user_registration_path, class: "font-medium text-primary-600 hover:underline" do %>
            Sign up
          <% end %>
      </p>
    <% end %>
  </div>
</div>


