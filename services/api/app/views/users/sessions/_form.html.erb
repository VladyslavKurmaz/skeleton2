<%= turbo_frame_tag :devise_user_form, data: {turbo_action: "advance"} do %>


    <h1 class="text-xl font-bold leading-tight md:text-2xl text-center mb-6">
      Sign in to your account
    </h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "space-y-4 md:space-y-6"}) do |f| %>
      <div>

        <%= f.label "Your email", class: "block mb-2 sm:text-sm font-medium text-dark-gray-900" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"name@company.com", required: true,
                          class: "bg-gray-50 border border-dark-gray-100 text-dark-gray-900 sm:text-sm rounded-md focus:ring-dark-gray-200 focus:border-dark-gray-200 block w-full p-2.5 placeholder:text-dark-gray-400"%>
      </div>

      <div>
        <%= f.label :password, class: "block mb-2 sm:text-sm font-medium text-dark-gray-900" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class:"bg-gray-50 border border-dark-gray-100 text-dark-gray-900 sm:text-sm rounded-md focus:ring-dark-gray-200 focus:border-dark-gray-200 block w-full p-2.5 placeholder:text-dark-gray-400" %>
      </div>


      <div class="flex items-center justify-between">
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <%= f.check_box :remember_me, "aria-describedby": "remember", checked:true, class: "w-4 h-4 text-primary-600 bg-gray-100 border-dark-gray-100 rounded focus:ring-primary-600" %>
          </div>
          <div class="ml-3 sm:text-sm">
            <%= f.label :remember_me, class:"text-dark-gray-900"%>
          </div>
        </div>
        <%= link_to new_user_password_path, class: "text-sm font-medium text-primary-600 hover:underline" do %>
          Forgot password?
        <% end %>
      </div>
        <%= f.submit "Sign in", class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg sm:text-sm px-5 py-2.5 text-center" %>

        <p class="text-sm font-light text-dark-gray-900">
          Don’t have an account yet?
          <%= link_to new_user_registration_path, class: "font-medium text-primary-600 hover:underline" do %>
            Sign up
          <% end %>
        </p>
    <% end %>
<% end %>