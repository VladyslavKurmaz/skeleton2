<%= turbo_frame_tag :devise_user_form, data: {turbo_action: "advance"} do %>
<h1 class="text-xl font-bold leading-tight md:text-2xl text-center mb-6">
    Create an account
  </h1>
  <%= form_for(resource, as: resource_name, url: user_registration_path, html: {class: "space-y-4 md:space-y-6"}) do |f| %>

    <%= render "users/shared/error_messages" %>

    <div>
      <%= f.label :name, "Name", class: "block mb-2 sm:text-sm font-medium text-dark-gray-900" %>

      <%= f.text_field :name, autofocus: true, autocomplete: "name",  placeholder:"Put your name here",
                        class: "bg-gray-50 border border-dark-gray-100 text-dark-gray-900 sm:text-sm rounded-md focus:ring-dark-gray-200 focus:border-dark-gray-200 block w-full p-2.5 placeholder:text-dark-gray-400"%>
    </div>

    <div>
      <%= f.label :email, "Your email", class: "block mb-2 sm:text-sm font-medium text-dark-gray-900" %>

      <%= f.email_field :email, autofocus: false, autocomplete: "email",  placeholder:"name@company.com",
                        class: "bg-gray-50 border border-dark-gray-100 text-dark-gray-900 sm:text-sm rounded-md focus:ring-dark-gray-200 focus:border-dark-gray-200 block w-full p-2.5 placeholder:text-dark-gray-400"%>
    </div>
    <div>
      <%= f.label :password, class: "block mb-2 sm:text-sm font-medium text-dark-gray-900" %>
      <%=f.password_field :password, autocomplete: "new-password", placeholder:"••••••••", class:"bg-gray-50 border border-dark-gray-100 text-dark-gray-900 sm:text-sm rounded-md focus:ring-dark-gray-200 focus:border-dark-gray-200 block w-full p-2.5 placeholder:text-dark-gray-400"%>
    </div>
    <div>




      <%= f.label :password_confirmation, class: "block mb-2 sm:text-sm font-medium text-dark-gray-900" %>
      <%=f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"••••••••", class:"bg-gray-50 border border-dark-gray-100 text-dark-gray-900 sm:text-sm rounded-md focus:ring-dark-gray-200 focus:border-dark-gray-200 block w-full p-2.5 placeholder:text-dark-gray-400"%>

    </div>
    <div class="flex items-start">
      <div class="flex items-center h-5">
        <input id="terms" aria-describedby="terms" type="checkbox" class="w-4 h-4 text-primary-600 bg-gray-100 border-dark-gray-100 rounded focus:ring-primary-600" required="">
      </div>
      <div class="ml-3 sm:text-sm">
        <label for="terms" class="font-light text-dark-gray-900">I accept the <a class="font-medium text-primary-600 hover:underline" href="#">Terms and Conditions</a></label>
      </div>
    </div>
    <%= f.submit "Create an account",  class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg sm:text-sm px-5 py-2.5 text-center"%>
    <p class="text-sm font-light text-dark-gray-900">
      Already have an account? <%= link_to new_user_session_path, class: "font-medium text-primary-600 hover:underline" do %>
      Login  here
      <% end %>
    </p>
  <% end %>
  <% end %>